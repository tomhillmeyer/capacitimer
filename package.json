{
  "name": "capacitimer",
  "author": {
    "name": "Tom Hillmeyer",
    "email": "tom@tomhillmeyer.com"
  },
  "description": "Speaker timer with full-screen display and web-based control",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:mac:intel": "npm run build && electron-builder --mac --x64",
    "dist:mac:arm": "npm run build && electron-builder --mac --arm64",
    "dist:linux:intel": "npm run build && electron-builder --linux --x64",
    "dist:linux:arm": "npm run build && electron-builder --linux --arm64",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:all": "npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@electron/osx-sign": "^2.3.0",
    "@eslint/js": "^9.39.1",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "electron": "^39.2.0",
    "electron-builder": "^24.9.1",
    "electron-notarize": "^1.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.creativeland.capacitimer",
    "productName": "Capacitimer",
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js",
      "web-server/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "out"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/capacitimer.png",
      "hardenedRuntime": true,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "gatekeeperAssess": false,
      "identity": "Creativeland, LLC (22SGVMMH49)",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "category": "public.app-category.utilities",
      "notarize": {
        "teamId": "22SGVMMH49"
      }
    },
    "afterSign": "./notarize.cjs",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/capacitimer.png",
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Utility",
      "icon": "assets/capacitimer.png",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
      "executableName": "capacitimer"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
